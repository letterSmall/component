
  <div class="paphoto-box">
   {% for block in section.blocks %}
    {% if block.type == 'image' %}
  <div class="paphoto-item">
    {% if block.settings.image %}
    <img class="lazyload" alt data-src="{{ block.settings.image | img_url:'master' }}"  width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}"/> 
   {% endif %}
   </div>
    {% else %}
    <div class="paphoto-item paphoto-item-text"> 
    {{block.settings.html}}
   </div>
    {% endif %}
   {% endfor %}
  </div>





