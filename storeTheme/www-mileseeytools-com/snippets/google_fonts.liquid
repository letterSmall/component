{% if settings.font_header == 'google_fonts' or settings.font_body == 'google_fonts' or settings.font_heading == 'google_fonts' or settings.font_button == 'google_fonts' %}
<script type="text/javascript">
  WebFontConfig = {
    google: { families: [ 
      {% if settings.font_header == 'google_fonts' %}
        '{{ settings.fonts_name_header }}:100,200,300,400,500,600,700,800,900'
      {% endif %}

      {% if settings.font_body == 'google_fonts' %}
        {% if settings.font_header == 'google_fonts' %}
          ,
        {% endif %}   
        '{{ settings.fonts_name_body }}:100,200,300,400,500,600,700,800,900'
      {% endif %} 

      {% if settings.font_heading == 'google_fonts' %}
        {% if settings.font_header == 'google_fonts' or settings.font_body == 'google_fonts' %}
          ,
        {% endif %}      
        '{{ settings.fonts_name_heading }}:100,200,300,400,500,600,700,800,900'
      {% endif %}

      {% if settings.font_button == 'google_fonts' %}
        {% if settings.font_heading == 'google_fonts' or settings.font_header == 'google_fonts' or settings.font_body == 'google_fonts' %}
          ,
        {% endif %}      
        '{{ settings.fonts_name_button }}:100,200,300,400,500,600,700,800,900'
      {% endif %}
    ] }
  };
  
  (function() {
    var wf = document.createElement('script');
    wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
      '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
    wf.type = 'text/javascript';
    wf.async = 'true';
    var s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(wf, s);
  })(); 
</script>
{% endif %}