<style>
  {% if section.settings.title_color != blank %}
  .page-{{ page.template_suffix }}-header.page-header-{{ section.id }} .header-title-box {
    color: {{ section.settings.title_color }};
  }
  {% endif %}
  {% if section.settings.desc_color != blank %}
  .page-{{ page.template_suffix }}-header.page-header-{{ section.id }} .header-desc-box,
  .page-{{ page.template_suffix }}-header.page-header-{{ section.id }} .header-desc-box p {
    color: {{ section.settings.desc_color }};
  }
  {% endif %}
</style>
<div class="page-header page-{{ page.template_suffix }}-header page-header-{{ section.id }}">
  {% if section.settings.pc_image != blank %}
  {%- assign pc_img_url = section.settings.pc_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
  <img class="feature-row__image lazyload hide-mb"
       src="{{ section.settings.pc_image | img_url: 'master' }}"
       data-src="{{ pc_img_url }}"
       data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
       data-aspectratio="{{ section.settings.pc_image.aspect_ratio }}"
       data-sizes="auto"
       alt="{{ section.settings.pc_image.alt | escape }}">
  {% endif %}
  {% if section.settings.mb_image != blank %}
  {%- assign mb_img_url = section.settings.mb_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
  <img class="feature-row__image lazyload hide-pc"
       src="{{ section.settings.mb_image | img_url: 'master' }}"
       data-src="{{ mb_img_url }}"
       data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
       data-aspectratio="{{ section.settings.mb_image.aspect_ratio }}"
       data-sizes="auto"
       alt="{{ section.settings.mb_image.alt | escape }}">
  {% endif %}
  <div class="header-content-box">
    {% if section.settings.title != blank %}
    <div class="header-title-box hide-mb">{{ section.settings.title }}</div>
    {% if section.settings.mb_title != blank %}
    <div class="header-title-box hide-pc">{{ section.settings.mb_title }}</div>
    {% else %}
    <div class="header-title-box hide-pc">{{ section.settings.title }}</div>
    {% endif %}
    {% endif %}
    {% if section.settings.description != blank %}
    <div class="header-desc-box">{{ section.settings.description }}</div>
    {% endif %}
    {% if section.settings.show_search %}
    <div class="header-search-box">
      <input type="text" value="" name="search" placeholder="What can we help you with?" class="faq-search-input" id="faq-search-input">
      <div class="faq-search-btn" id="faq-search-btn">
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M16.9456 15.4559L16.9456 15.4559L16.9419 15.4522L14.1307 12.6637C15.2291 11.206 15.7559 9.39312 15.6058 7.56887C15.4496 5.66965 14.5716 3.90246 13.1525 2.63068C11.7333 1.35889 9.88082 0.679181 7.97589 0.731306C6.07097 0.783432 4.25841 1.56343 2.91092 2.91092C1.56343 4.25841 0.783432 6.07097 0.731306 7.97589C0.679181 9.88082 1.35889 11.7333 2.63068 13.1525C3.90246 14.5716 5.66965 15.4496 7.56887 15.6058C9.39342 15.7559 11.2066 15.2289 12.6644 14.1301L15.4522 16.9179C15.4523 16.9181 15.4525 16.9182 15.4527 16.9184C15.5502 17.0166 15.6661 17.0945 15.7939 17.1478C15.9219 17.2011 16.0591 17.2285 16.1977 17.2285C16.3364 17.2285 16.4736 17.2011 16.6016 17.1478C16.7296 17.0944 16.8457 17.0163 16.9433 16.9179L16.9434 16.9179L16.9456 16.9156C17.1349 16.7198 17.2407 16.4581 17.2407 16.1857C17.2407 15.9134 17.1349 15.6517 16.9456 15.4559ZM8.19643 13.5474C7.13811 13.5474 6.10357 13.2335 5.22361 12.6456C4.34366 12.0576 3.65782 11.2219 3.25282 10.2441C2.84782 9.26638 2.74185 8.19049 2.94832 7.15251C3.15479 6.11454 3.66441 5.16109 4.41275 4.41275C5.16109 3.66441 6.11454 3.15479 7.15251 2.94832C8.19049 2.74185 9.26638 2.84782 10.2441 3.25282C11.2219 3.65782 12.0576 4.34366 12.6456 5.22361C13.2335 6.10357 13.5474 7.13811 13.5474 8.19643C13.5474 9.61558 12.9836 10.9766 11.9801 11.9801C10.9766 12.9836 9.61558 13.5474 8.19643 13.5474Z" fill="black" stroke="black" stroke-width="0.5"/>
