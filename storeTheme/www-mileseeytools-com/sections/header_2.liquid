<div data-section-id="{{ section.id }}" data-section-type="header-section">
    {% if section.settings.message %}
        {% if section.settings.home_page_only == false or template.name == 'index' %}
        <div class="announcement">
          <div class="container">
            <div class="announcement-bar-wrapper" data-slick='{
                        "rows": 0,
                        "dots": false,
                        "vertical": true,
                        "arrows": true,
                        "infinite": true,
                        "autoplay": true,
                        "mobileFirst": true,
                        "autoplaySpeed": 3000,
                        "slidesToShow": 1,
                        "slidesToScroll": 1,
                        "prevArrow": "<div class=&apos;slick-prev slick-arrow&apos;><svg class=&apos;icon&apos;><use xlink:href=&apos;#icon-chevron-left&apos; /></svg></div>", 
                        "nextArrow": "<div class=&apos;slick-next slick-arrow&apos;><svg class=&apos;icon&apos;><use xlink:href=&apos;#icon-chevron-right&apos; /></svg></div>"
                    }'>
                  {% if section.settings.message_text1 != blank %}
                    <div class="announcement-bar">
                        <a href="{{ section.settings.message_link1 }}">{{ section.settings.message_text1 }}</a>
                    </div>
                  {% endif %}
                  {% if section.settings.message_text2 != blank %}
                    <div class="announcement-bar">
                        <a href="{{ section.settings.message_link2 }}">{{ section.settings.message_text2 }}</a>
                    </div>
                  {% endif %}
            </div>
          </div>
        </div>
        {% endif %}
    {% endif %}
    <header class="site-header header-sticky {{ settings.body_layout }} halo-header-02">
        <div class="halo-header-PC">
            {% if section.settings.header_top %}
            <div class="header-top">
                <div class="container navUser">
                    <div class="navUser-left navUser-section">
                       
                          <div class="navUser-item navUser-logo">
                            <div class="logo-wrapper" itemscope itemtype="http://schema.org/Organization">
                                <meta itemprop="url" content="{{ shop.url }}">
                                {% if section.settings.logo != blank %}
                                    {%- assign img_url = section.settings.logo | img_url: '205x' -%}
                                    <a href="{{ routes.root_url }}" class="site-header__logo-image" aria-label="logo" style="width: {{ section.settings.logo_max_width }}px">
                                        {% capture logo_alt %}{{ section.settings.logo.alt | default: shop.name }}{% endcapture %}
                                        <img itemprop="logo" src="{{ img_url }}" alt="{{ logo_alt | escape }}">
                                    </a>
                                {% else %}
                                    {% if section.settings.logo_text != blank %}
                                        <a class="site-header__logo-link" href="{{ routes.root_url }}" aria-label="logo" style="width: {{ section.settings.logo_max_width }}px">{{ section.settings.logo_text }}</a>
                                    {% else %}
                                        <a class="site-header__logo-link" href="{{ routes.root_url }}" aria-label="logo">{{ shop.name }}</a>
                                    {% endif %}
                                {% endif %}
                            </div>
                          </div>
                    </div>

                    <div class="navUser-right navUser-section">
                        {% if section.settings.enable_call_us %}
                            <div class="navUser-item navUser-call-us">
                                <a class="navUser-action" href="{{ section.settings.link_call_us }}" aria-label="link">
                                    <span class="navUser-text-wrapper">
                                        {{ section.settings.text_call_us }}
                                    </span>
                                </a>
                            </div>
                        {% endif %}
                        {% if section.settings.enable_header_account and shop.customer_accounts_enabled %}
                            <div class="navUser-item navUser-account">
                                {% if customer %}
                                    <div class="navUser-text-wrapper">
                                        <a class="navUser-action" href="{{ routes.account_url }}"><strong>{{ customer.name }}.</strong></a>
                                        <a class="navUser-action1 navUser-text-account" href="/account/logout" aria-label="link">
                                            <span> {{ 'layout.customer.log_out' | t }}</span>
                                        </a>
                                    </div>
                                {% else %} 
                                    <a data-login-dropdown-pc class="navUser-action navUser-text-account" href="{{ routes.account_login_url }}" aria-label="link">
                                        <span class="navUser-text-wrapper">{{ 'customer.account.title1' | t }}</span>
                                    </a>
                                    {% render 'login-form' %}
                                {% endif %}
                            </div>
                        {% endif %}
                        {% if section.settings.enable_header_wishlist %}
                            <div class="navUser-item navUser-wislish">
                                <a class="navUser-action" href="{{ section.settings.header_link_wishlist }}" aria-label="link">
                                    <span class="navUser-text-wrapper">
                                        {{ section.settings.header_text_wishlist }}
                                    </span>
                                </a>
                            </div>
                        {% endif %}
                        {% if section.settings.enable_multiple_language %}
                            <div class="navUser-item navUser-language">
                                {% render 'dropdown-language' %}
                            </div>
                        {% endif %}
                        {% if section.settings.enable_multiple_currencies %}
                            <div class="navUser-item navUser-currency">
                                {% render 'dropdown-currency' %}
                            </div>
                        {% endif %}
                        {% if section.settings.enable_header_cart %}
                            {% if request.page_type != 'cart' %}
                                <div class="navUser-item navUser--cart item--cart">
                                    <a class="navUser-action custom" data-cart-preview-pc data-options="align:right" href="javascript:void(0)" aria-label="link">
                                        <span class="cart-wrapper">
                                            <svg class="icon"><use xlink:href="#icon-cart" /></svg>
                                            <span class="countPill cart-quantity" data-cart-count>{{ cart.item_count }}</span>
                                        </span>
                                        <span class="navUser-text-wrapper">
                                            {{ 'layout.cart.title' | t }}
                                        </span>
                                    </a>
                                    {% render 'dropdown-cart' %}
                                </div>
                            {% else %}
                                <div class="navUser-item navUser--cart item--cart">
                                    <a class="navUser-action custom" data-options="align:right" href="{{ routes.cart_url }}" aria-label="link">
                                        <span class="cart-wrapper">
                                            <svg class="icon"><use xlink:href="#icon-cart" /></svg>
                                            <span class="countPill cart-quantity" data-cart-count>{{ cart.item_count }}</span>
                                        </span>
                                        <span class="navUser-text-wrapper">
                                            {{ 'layout.cart.title' | t }}
                                        </span>
                                    </a>
                                    {% render 'dropdown-cart' %}
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endif %}
            {% if section.settings.header_middle %}
            <div class="header-middle">
                <div class="container">
                    <div class="wrapper-middle">
                        <div class="header-middle-menu">
                          <ul id="site-nav" class="site-nav">
                            {% render 'site-nav', main_menu: section.settings.main_menu %}
                          </ul>
                        </div>
                        <div class="header-middle-text">
                            {% if section.settings.enable_header_search %}
                                <div class="item item--quickSearch">
                                    <a class="navUser-action search sticky_search" href="javascript:void(0)" aria-label="link" data-search-dropdown-pc>
                                        <div class="navUser-icon">
                                          <svg class="icon icon-search"><use xlink:href="#icon-search" /></svg>
                                          <svg class="icon icon-close" style="display: none"><use xlink:href="#icon-close" /></svg>
                                        </div>
                                    </a>
                                    {% render 'search-bar' %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
        <div class="halo-header-mobile">
            {% render 'header-mobile' %}
        </div>
    </header>
</div>
