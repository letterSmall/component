
<div class="halo-section">
  <div class="container">
    {% if section.blocks.size > 0 %}
    <div class="custom-block-category">
      {% for block in section.blocks %}
      <div class="customBlock_item" {{ block.shopify_attributes }}>
        <a href="{{block.settings.link}}">
          {% if block.settings.icon_policy != blank %}
          <span class="custom-image">{{block.settings.icon_policy}}</span>
          {% endif %}
          <div class="custom-content">
            {% if block.settings.title != blank %}
            <h3>{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.text != blank %}
            <p class="description mb-show">{{ block.settings.text }}</p>
            {% endif %}
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
    "name": "Custom Block Category",
    "max_blocks": 4,
    "settings": [],
    "blocks": [
        {
            "type": "logo_image",
            "name": "Category Block",
            "settings": [
                {
                    "type":"text",
                    "id":"icon_policy",
                    "label":"Add icon",
                    "info":"Use svg code"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Description"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom Block Category",
            "category": "Custom Block",
            "blocks": [
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                }
            ]
        }
    ]
}
{% endschema %}
