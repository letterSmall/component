<div class="about-us-content" data-section-id="{{ section.id }}" data-section-type="about-us-content-section">
  <div class="container">
    {% if section.settings.left_heading != blank or section.settings.left_content != blank %}
    <div class="col-left">
      {% if section.settings.left_heading != blank %}
        <h3 class="heading">{{ section.settings.left_heading }}</h3>
      {% endif %}
      {% if section.settings.left_content != blank %}
      <div class="content">
        {{ section.settings.left_content }}
      </div>
      {% endif %}
    </div>
    {% endif %}
    {% if section.settings.right_heading != blank or section.settings.right_content != blank %}
    <div class="col-right">
      {% if section.settings.right_heading != blank %}
        <h3 class="heading">{{ section.settings.right_heading }}</h3>
      {% endif %}
      {% if section.settings.right_content != blank %}
      <div class="content">
        {{ section.settings.right_content }}
      </div>
      {% endif %}
    </div>
    {% endif %}
  </div>
</div>

<style>
{% if section.settings.custom_color %}
  .about-us-content .heading{
    color:  {{ section.settings.heading_color }};
  }
  .about-us-content .heading:after{
    background-color:  {{ section.settings.heading_color }};
  }
  .about-us-content .content{
    color: {{ section.settings.text_color }};
  }
{% endif %}
</style>

{% schema %}
{
  "name": "About Us Content",
  "class": "about-us-content-sections",
  "settings": [
    {
      "type":"header",
      "content":"Left Column"
    },
    {
      "type":"text",
      "id":"left_heading",
      "label":"Heading",
