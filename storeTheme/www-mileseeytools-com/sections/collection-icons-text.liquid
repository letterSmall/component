
<div class="collection-icons-text-{{ section.id }}">
  <div class="container1000">
    {% if section.blocks.size > 0 %}
    <div class="custom-icon-wrapper">
      {% for block in section.blocks %}
      <div class="customBlock_item">
          {% if block.settings.image != blank %}
          <img class="custom-icon-png"  src="{{block.settings.image | img_url:'master'}}"/>
        {% else %}
        <span class="custom-icon-svg">{{block.settings.icon_svg}}</span>
          {% endif %}
          <div class="custom-content">
            {% if block.settings.title != blank %}
            <h5>{{ block.settings.title }}</h5>
            {% endif %}
          </div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</div>
<style>
  .collection-icons-text-{{ section.id }}{ background:{{section.settings.bg_color}}; padding:2vw 0;}
  .collection-icons-text-{{ section.id }} h5{ color:{{section.settings.text_color}};}
  @media (max-width: 768px){
    .collection-icons-text-{{ section.id }} .container1000{ padding-right: 3px; padding-left: 3px;}
  }
</style>


{% schema %}
{
    "name": "Collection Icons Text",
    "max_blocks": 8,
    "settings": [
          {
            "type": "color",
            "id": "bg_color",
            "label": "Section Background Color",
            "default": "#000"
          },{
            "type": "color",
            "id": "text_color",
            "label": "Text Color",
            "default": "#fff"
          }
     ],
    "blocks": [
        {
            "type": "logo_image",
            "name": "Category Block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Icon PNG",
                    "info": "Size: 100px*100px"
                },{
                    "type":"text",
                    "id":"icon_svg",
                    "label":"Icon SVG(Effective when PNG is not uploaded)",
                    "info":"Use svg code"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Collection Icons Text",
            "category": "Custom Block",
            "blocks": [
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                },
                {
                    "type": "logo_image"
                }
            ]
        }
    ]
}
{% endschema %}
