
  {% for block in section.blocks %}
<div class="bg-text-link">
  {% if block.settings.image %}
  <img class="hide-mb lazyload" src="{{ block.settings.image |img_url: '10x' }}" data-src={{ block.settings.image |img_url: 'master' }} alt=""/>
  {% endif %}
  
  {% if block.settings.image_mb %}
  <img class="hide-pc lazyload" src="{{ block.settings.image_mb |img_url: '10x' }}" data-src="{{ block.settings.image_mb |img_url: 'master' }}" alt=""/>
  {% else %}
   <img class="hide-pc lazyload" src="{{ block.settings.image |img_url: '10x' }}" data-src="{{ block.settings.image |img_url: 'master' }}" alt=""/>
  {% endif %}

  <div class="bg-text-wrapper animation-text">
    <div class="container">
      <div class="bg-text-box">
        {% if block.settings.subtitle != blank %}
        <h2 class="fadein-0">{{ block.settings.subtitle }}</h2>
        {% endif %}

        {% if block.settings.title != blank %}
        <h1  class="fadein-05">{{ block.settings.title }}</h1>
        {% endif %}

        {% if block.settings.text != blank %}
        <p class="fadein-1">{{ block.settings.text }}</p>
        {% endif %}

        {% if block.settings.btn != blank and block.settings.link != blank %}
        <a class="btn btn--primary btn240 fadein-1" href="{{ block.settings.link }}"> {{ block.settings.btn }}</a>
        {% endif %}
      </div>
    </div>
  </div>
  <style>
    .collection-background-text .bg-text-link p{color:{{ block.settings.text_color}};}
    .collection-background-text .bg-text-link h2,.collection-background-text .bg-text-link h1{color:{{ block.settings.title_color}};}
    .collection-background-text .bg-text-link p{ font-size:1.25vw; line-height: 1.5;}
    .collection-background-text .bg-text-link h2{ font-size:1.5625vw; }
    @media (min-width: 769px){
      .collection-background-text .bg-text-wrapper{
        position: absolute;
        left: 0;
        top:50%;
        transform: translateY(-50%);
        width:100%;
      }
      .collection-background-text .bg-text-box{max-width:43vw;}
    }
    @media (max-width: 768px){
      .collection-background-text .bg-text-wrapper{ background:{{ block.settings.text_bg_color}};text-align: center; padding: 8vw 15px;}
      .collection-background-text .bg-text-link h1{ font-size:8vw; }
      .collection-background-text .bg-text-link h2{ font-size: 5.33vw;font-weight: 400; }
    }
  </style>
  </div>
  {% endfor %}


<style>
  .no-margin-section{
    margin-top:{{section.settings.margin_top | append:'px'}} !important; 
  }
  .bg-text-link{ position: relative; }
  .bg-text-wrapper h1{ font-size: 3.65vw;line-height: 1; }
  .bg-text-link img{width:100%; height: auto;}
  .bg-text-link .btn{  margin-top: 10px;}
</style>

