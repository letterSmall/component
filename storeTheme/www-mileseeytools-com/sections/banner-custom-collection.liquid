{% include 'setting-spacing' %}

{%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}

{% if section.settings.custom_color %}
<style>
    [data-section-id='{{ section.id }}'] .hero .hero-content .title {
        color: {{ section.settings.color_heading }}
    }  

    [data-section-id='{{ section.id }}'] .hero .hero-content .title:before {
        background-color: {{ section.settings.color_heading }}
    }  

    [data-section-id='{{ section.id }}'] .hero .hero-content .description,
    [data-section-id='{{ section.id }}'] .hero .hero-content .description p > a,
    [data-section-id='{{ section.id }}'] .hero .hero-content .description > a {
        color: {{ section.settings.color_text }}
    }

    [data-section-id='{{ section.id }}'] .hero .hero-content .description p > a:after,
    [data-section-id='{{ section.id }}'] .hero .hero-content .description > a:after {
        background-color: {{ section.settings.color_text }}
    }

    [data-section-id='{{ section.id }}'] .hero .button-group .btn {
        color: {{ section.settings.color_button_one }};
        background-color: {{ section.settings.bg_button_one }};
        border-color: {{ section.settings.border_button_one }};
    }

    [data-section-id='{{ section.id }}'] .hero .button-group .btn:hover {
        color: {{ section.settings.color_button_one_hover }};
        background-color: {{ section.settings.bg_button_one_hover }};
        border-color: {{ section.settings.border_button_one_hover }};
    }

    [data-section-id='{{ section.id }}'] .hero-content-custom-2 .section-header h2{
        color: {{ section.settings.color_heading_custom }}
    } 

    [data-section-id='{{ section.id }}'] .hero-content-custom-2{
        background-color: {{ section.settings.bg_html }}
    } 
</style>
{% endif %}

<div class="halo-section banner-custom-collection {% if section.settings.custom_block %}hero-custom-block-margin{% endif %} {{ padding_top }} {{ padding_bottom }}" data-section-id="{{ section.id }}" data-section-type="hero-section">
  <div class="container-fluid">
    <div class="row">

      <div class="hero hero-content-custom-1 hero--large ">
          <div class="hero-image-wrapper">
              <div class="hero-image" {% if section.settings.image != blank %}style="background-image: url('{{ section.settings.image | img_url: 'master' }}'); background-size: cover;background-position: center;"{% endif %}>
                  {% if section.settings.image == blank %}
                      <div class="placeholder-background">
                          <span class="recommended_size">945x570</span>
                          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                  {% endif %}
              </div>
          </div>
         
      </div>

      <div class="hero hero-content-custom-2 {% if section.settings.hero_layout_content == 'left_to_right'%}left-to-right{% endif %}"> 
        <div class="hero-content hero-content--left {% if section.settings.custom_block %}hero-custom-block-padding{% endif %}">
              {%- if section.settings.text != blank -%}
                  <div class="description">{{ section.settings.text }}</div>
              {%- endif -%}
              {%- if section.settings.title != blank -%}
                  <h2 class="title mega-title--medium">
                      {{ section.settings.title }}
                  </h2>
              {%- endif -%}
              {%- if section.settings.button_label != blank -%}
                  <div class="button-group">
                      {%- if section.settings.button_label != blank -%}
                          <a href="{{ section.settings.button_link }}" class="btn btn--secondary" aria-label="link">
                              {{ section.settings.button_label }}
                          </a>
                      {%- endif -%}
                  </div>
              {%- endif -%}
          </div>
        
      </div>

    </div>
  </div>
</div>

{% schema %}
{
    "name": "Full Width Banner Custom",
    "class": "banner-custom-collection-sections",
    "settings": [
        {
            "type": "header",
            "content": "Section Layout"
        },
        {
            "type": "range",
            "id": "padding-top",
            "label": "Spacing Top",
            "default": 3,
            "min": 0,
            "max": 10,
            "step": 1
        },
        {
            "type": "range",
            "id": "padding-bottom",
            "label": "Spacing bottom",
            "default": 3,
            "min": 0,
            "max": 10,
            "step": 1
        },
        {
            "type": "header",
            "content": "Banner Image"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "select",
            "id": "hero_layout_content",
            "label": "Layout Content",
            "default": "right_to_left",
            "options": [
                {
                    "label": "Left to Right",
                    "value": "left_to_right"
                },
                {
                    "label": "Right to Left",
                    "value": "right_to_left"
                }
            ]
        },
        {
            "type": "header",
            "content": "Banner Content"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "John Smith"
        }, 
        {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>“ Nam tempus turpis de metus scelerisque an lacerato nulla deumantos sollicitudin. Delos melis pellentesque dolor lobortis.”</p>"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button",
            "default": "Read All Reviews"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
        },
        {
            "type": "header",
            "content": "Custom Color"
        },
        {
            "type": "checkbox",
            "id": "custom_color",
            "label": "Turn on custom color",
            "default": false
        },
        {
            "type": "color",
            "id": "bg_html",
            "label": "Background Color"
        }, 
        {
            "type": "color",
            "id": "color_heading",
            "label": "Title Color"
        },
        {
            "type": "color",
            "id": "color_text",
            "label": "Text Color"
        },
        {
            "type": "color",
            "id": "color_button_one",
            "label": "Button Color"
        },
        {
            "type": "color",
            "id": "border_button_one",
            "label": "Border Button"
        },
        {
            "type": "color",
            "id": "bg_button_one",
            "label": "Background Button"
        },  
        {
            "type": "color",
            "id": "color_button_one_hover",
            "label": "Button Color Hover"
        },
        {
            "type": "color",
            "id": "border_button_one_hover",
            "label": "Border Button Hover"
        },
        {
            "type": "color",
            "id": "bg_button_one_hover",
            "label": "Background Button Hover"
        }     
    ]
}
{% endschema %}
