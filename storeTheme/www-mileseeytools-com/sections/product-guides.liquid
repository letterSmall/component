<div class="underline"><span></span></div>
<div class="section-product-guides">
  <div class="container1000">
  <h2 class="guides-title h2_uptitle">
    {{section.settings.title}}
  </h2>
  <div class="link-wrapper">
    {% for block in section.blocks %}
    <div class="item">
      <img src="{{block.settings.icon | img_url: 'master'}}" class="image"/>
      <a href="{{block.settings.link}}" class="name" target="_blank">{{block.settings.name}}</a>
    </div>
    {% endfor %}
  </div>
  </div>
</div>
{% schema %}
  {
    "name": "Product Guides",
    "settings": [
      {
        "type": "text",
        "label": "Title",
        "id": "title"
      }
	],
	"blocks":[
      {
        "type": "manual",
        "name": "manual",
        "settings":[
          {
            "type": "image_picker",
            "label": "Icon",
            "id": "icon"
          },{
            "type": "text",
            "label": "Name",
            "id": "name"
          },{
            "type": "url",
            "label": "Link",
            "id": "link"
          }
      	]
      }
	],
    "presets": [
      {
		"name": "Product Guides",
		"category": "Text"
      }
    ]
  }
{% endschema %}

