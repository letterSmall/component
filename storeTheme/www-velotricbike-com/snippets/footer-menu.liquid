{% if linklists[block.settings.menu].links.size > 0 %}
  {% if block.settings.show_footer_title %}
<!--     <p class="footer__title small--hide"> -->
<p class="footer__title pad-down--hide">
  {{ linklists[block.settings.menu].title }}
</p>
<!--     <button type="button" class="footer__title collapsible-trigger collapsible-trigger-btn medium-up--hide is-open" aria-expanded="true" aria-controls="Footer-{{ block.id }}"> -->
<button type="button" class="footer__title collapsible-trigger collapsible-trigger-btn pad-up--hide is-open" aria-expanded="true" aria-controls="Footer-{{ block.id }}">
      {{ linklists[block.settings.menu].title }}
      <span class="minus">-</span> <span class="plus">+</span>
    </button>
  {% endif %}
  <div
    {% if block.settings.show_footer_title %}
      id="Footer-{{ block.id }}" class="collapsible-content collapsible-content--small"
    {% endif %}>
    <div class="collapsible-content__inner">
      <div class="footer__collapsible{% unless block.settings.show_footer_title %} footer_collapsible--disabled{% endunless %}">
        <ul class="no-bullets site-footer__linklist">
          {%- for link in linklists[block.settings.menu].links -%}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
{% endif %}
