<div class="index-section support-list  section-{{section.id}}">
  <div class="page-width small--text-center">
  <div class="h2 appear-delay{% cycle '','-1','-2','-3','-4' %}"><b>{{ section.settings.title | escape }}</b></div>
    {%- if section.blocks.size > 0 -%}
  <ul>
  {%- for block in section.blocks -%}
    <li class="support-item medium-up--one-third small--one-whole"><a {% if block.settings.link != blank %}href="{{block.settings.link}}" class="text-link"{% else %} onclick="return false;"{% endif%}>{{ block.settings.text }}</a></li>
  {%- endfor -%}
  </ul>
  {%- endif -%}
  </div>
</div>
{% schema %}
  {
    "name": "Support List",
    "settings": [
	{
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Resources"
      }
	],
    "blocks": [
      {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
      "name": "Support List"
      }
    ]    
  }
{% endschema %}

