    "settings": [
{
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Features"
      },
{
  "type": "paragraph",
  "content": "use metafield ,Namespace:custom_desc;Key:product-gallery"
},
{
  "type": "paragraph",
  "content": "<div class=\"swiper-slide\"><img src=\"https://cdn.shopify.com/s/files/1/0599/2094/1239/files/gallery-image01.png?v=1640939910\"><div class=\"text\"><div class=\"h4\">Adventure</div><p>Our most comfortable bike with 16-speed shifting, front suspension & a plush saddle</p></div></div>"
}
],
"presets": [
      {
        "name": "Featured Gallery"
      }
    ]
  }
{% endschema %}

