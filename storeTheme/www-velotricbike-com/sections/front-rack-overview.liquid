<div class="section-front-rack-overview">
  <div class="front-rack-overview-inner">
    <div class="title">{{section.settings.title}}</div>
    <div class="tab-wrapper">
      {% for block in section.blocks %}
      <div class="item">
        <div class="item-title">
          {{block.settings.title}}
          <div class="control-wrapper">
            <span class="minus">-</span>
            <span class="plus">+</span>
          </div>
        </div>
        <div class="item-text">{{block.settings.text}}</div>
        
      </div>
      {% endfor %}
    </div>
  </div>
</div>
<script>
    $(function(){
      $(".front-rack-overview-inner .item-title").click(function(){
        if($(this).parent().hasClass("active")){
          $(this).parent().find(".item-text").slideToggle(300);
          $(this).parent().removeClass("active");
        }else{
          $(".front-rack-overview-inner .item.active").find(".item-text").slideToggle(300);
          $(".front-rack-overview-inner .item.active").removeClass("active");
          $(this).parent().addClass("active");
          $(this).parent().find(".item-text").slideToggle(300);
        }
      });
    });
</script>
<style>
  .section-front-rack-overview {padding:80px 120px;background: #FAFAFA;}
  .section-front-rack-overview .front-rack-overview-inner{
    display: flex;
    align-items:flex-start;
    justify-content:space-between;
    max-width: 1200px;
    margin: 0px auto;
  }
  .front-rack-overview-inner .tab-wrapper{
    max-width: 700px;
    padding-left: 40px;
    width: 100%;
    margin-left: 20px;
  }
  .front-rack-overview-inner .item{
    position:relative;
    border-top: 1px solid #C0C0C0;
  }
  .front-rack-overview-inner .item:last-of-type{
    border-bottom: 1px solid #C0C0C0;
  }
  .front-rack-overview-inner .title{
    font-weight: 700;
    font-size: 36px;
    line-height: 1.1;
    color: #000000;
  }
  
  .front-rack-overview-inner .item-title{
    font-weight: 700;
    font-size: 28px;
    line-height: 1.3;
    color: #000000;
    padding: 18px 0px;
    position:relative;
    cursor: pointer;
  }
  
  .front-rack-overview-inner .item-text{
    font-weight: 400;
    font-size: 20px;
    line-height: 1.35;
    color: #000000;
    display: none;
    margin-bottom: 40px;
  }
  
  .front-rack-overview-inner .control-wrapper{
    font-weight: 700;
    font-size: 28px;
    line-height: 1.3;
    color: #000000;
    cursor: pointer;
    
    position: absolute;
    left: -30px;
    top: 50%;
    transform: translateY(-50%);
    text-align: center;
  }
  .front-rack-overview-inner .item .minus{display:none;min-width: 21px;}
  .front-rack-overview-inner .item .plus{min-width: 21px;}
  .front-rack-overview-inner .item.active .minus{display:block;}
  .front-rack-overview-inner .item.active .plus{display:none;}
  
  @media(max-width: 1000px){
    .section-front-rack-overview {padding:60px 36px;}
  }
  @media(max-width: 600px){
    .section-front-rack-overview { padding: 60px 8.411214vw;}
    .section-front-rack-overview .front-rack-overview-inner{display:block;}
    .front-rack-overview-inner .title{text-align:center;font-size: 32px;margin-bottom: 36px;}
    .front-rack-overview-inner .tab-wrapper{
      padding-left: 40px;
      margin-left: 0px;
    }
    .front-rack-overview-inner .item-title{font-size: 22px;}
    .front-rack-overview-inner .item-text{font-size: 16px;}
  }
</style>

