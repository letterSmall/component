{% if product.metafields.custom_desc.featured_review  != blank %}
<div class="features-review-section">
  <div class="page-width">
  {% if section.settings.title != blank %}<div class="h1 text-center"><strong>{{ section.settings.title }}</strong></div>{% endif %}
  <div class="features-review swiper">
    <div class="swiper-wrapper">
      {% assign featured_reviews =product.metafields.custom_desc.featured_review |  split: '[item]' %}
      {% for review in featured_reviews %}
      {% assign review_items =review |  split: '[end]' %}
      <div class="reviewAll swiper-slide">

          <div class="tenways">

              <div class="review_in">
                <div class="text">{{ review_items[0]}}</div>
           <div class="video_review">
            <div class="product__media">
              <iframe src="https://www.youtube.com/embed/{{ review_items[3]}}?enablejsapi=1" class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen=""></iframe>
            </div>
          </div>
                <div class="html">
                  {{ review_items[1]}}
                </div>
              </div>
              <div class="rte">
                {{ review_items[2]}}
              </div>
          </div>




      </div>
      {% endfor %}
    </div>

    <div class="swiper-pagination review-pagination"></div>
  </div>


      <div class="swiper-button-prev review-prev">
