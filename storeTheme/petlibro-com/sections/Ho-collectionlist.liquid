<div class="Hocollectionlist-container">
  <div class="contianer-ho">
   <div class="Hocollectionlist-box">
  {% for block in section.blocks %}
   <div class="Hocollectionlist-item">
     {% if block.settings.url %}
     <a href="{{ block.settings.url }}"> 
     {% endif %}
     {% if block.settings.image %}
       <div class="Hocollectionlist-itemimgbox {% if block.settings.mb_image %}pc_hocollectionlist_image{% endif %}"><img class="Hocollectionlist-itemimg lazyload"  src="{{ block.settings.image | img_url:'10x' }}" data-src="{{ block.settings.image | img_url:'master' }}" alt="{{ block.settings.title }}" /></div>
     {% endif %}
     {% if block.settings.mb_image %}
       <div class="Hocollectionlist-itemimgbox mb_hocollectionlist_image"><img class="Hocollectionlist-itemimg lazyload"  src="{{ block.settings.mb_image | img_url:'10x' }}" data-src="{{ block.settings.mb_image | img_url:'master' }}" alt="{{ block.settings.title }}" /></div>
     {% endif %}
     {% if block.settings.title != blank %}
     <div class="Hocollectionlist-itemtitle">{{ block.settings.title }}</div>
     {% endif %}
     {% if block.settings.url %}
     </a>
     {% endif %}
   </div>
  {% endfor %}
  </div>
  </div>
  
</div>





{% schema %}
  {
    "name": "Index Collection List",
"class":"pa_tops",
"settings": [

    ],
    "blocks": [
      {
        "type": "block",
        "name": "block",
        "settings": [
       {
        "type": "image_picker",
        "id": "image",
        "label": "image"
      },{
        "type": "image_picker",
        "id": "mb_image",
        "label": "Mobile Image"
      },{
        "type": "text",
        "id": "title",
        "label": "Title"
      },{
        "type": "url",
        "id": "url",
        "label": "url"
      }
          
        ]
      }
    ],
    "presets": [
      {
        "name": "Index Collection List",
        "category": "HO-layout"
      }
    ]
  }
{% endschema %}
