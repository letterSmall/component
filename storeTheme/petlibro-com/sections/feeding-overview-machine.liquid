
<div class="feeding_machine_box machine_title feeding_model_s">
  <div class="feeding_machine_a"><span>{{ section.settings.app_title }}</span><img src="{{ "deeding_add_icon.png" | asset_url }}"></div>
  <ul class="feeding_machine_c">
    {% for block in section.blocks %}
      <div class="feeding_machine_item">
        <div class="feeding_machine_s">{{block.settings.step_id}}</div>
        <img class="lazyload" data-src="{{ block.settings.id_image | img_url: 'master' }}" alt="">
        <div class="feeding_machine_title">{{block.settings.step_title}}</div>
      </div>
    {% endfor %}
  </ul>
</div>
<script>
  $('.machine_title .feeding_machine_a').click(function(e) {
    if ($('.machine_title').hasClass('machine_active')) {
      $('.machine_title').removeClass('machine_active')
    } else {
      $('.machine_title').addClass('machine_active')
    }
  })
</script>
{% schema %}
{
  "name": "Feeding Overview Machine",
  "settings": [
    {
      "type": "text",
      "id": "app_title",
      "label": "A Title"
    }
  ],
  "blocks": [
    {
      "type": "step-images",
      "name": "step",
      "settings": [
        {
          "type": "text",
          "id": "step_id",
          "label": "Step Id"
        },
        {
          "type": "html",
          "id": "step_title",
          "label": "Step Title"
        },
        {
          "type": "image_picker",
          "id": "id_image",
          "label": "Image",
          "info": "Image: 1200x"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feeding Overview Machine"
    }
  ]
}
{% endschema %}
