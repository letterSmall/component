      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "block",
        "settings": [
     {
        "type": "image_picker",
        "id": "image_sy2",
        "label": "image"
      },{
        "type": "image_picker",
        "id": "image_sy2_mb",
        "label": "image mobile"
      },{
        "type": "text",
        "id": "title",
        "label": "title"
      },{
        "type": "text",
        "id": "subtitle",
        "label": "subtitle"
      },{
        "type": "text",
        "id": "url_text",
        "label": "url_text"
      },{
        "type": "url",
        "id": "url",
        "label": "url"
      }
          
        ]
      }
    ],
    "presets": [
      {
        "name": "Index Best Seller02",
        "category": "HO-layout"
      }
    ]
  }
{% endschema %}
