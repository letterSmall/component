{% if section.settings.show_section != blank and section.blocks.size > 0 %}
<style>
    .custom-text-columns-{{ section.id }} .title-box {
    color: {{ section.settings.title_color }};
  }
  .custom-text-columns-{{ section.id }} .desc-box {
    color: {{ section.settings.desc_color }};
  }
  .custom-text-columns-{{ section.id }} .separator-box {
    background-color: {{ section.settings.separator_color }};
  }
</style>

<div class="custom-text-columns custom-text-columns-{{ section.id }} {% if section.settings.tab_id != blank %}{{ section.settings.tab_id }}{% endif %}">
  <div class="text-columns-container page-width">
    <div class="text-columns-wrapper">
      {% for block in section.blocks %}
      {% if block.settings.block_link != blank %}
      <a href="{{ block.settings.block_link }}" class="column-item">
        {% else %}
        <div class="column-item">
          {% endif %}

          {% if block.settings.pc_image != blank %}
          <div class="image-container">
            <img class="lazyload js pad-down--hide"
                 src="{{ block.settings.pc_image | img_url: '1x' }}"
                 srcset="{{ block.settings.pc_image | img_url: '1500x' }}, {{ block.settings.pc_image | img_url: '960x' }}"
                 sizes="(max-width: 960px) 960px, 1500px" 
                 alt=""
                 width="{{ block.settings.pc_image.width }}" 
                 height="{{ block.settings.pc_image.height }}"/>
            {% if section.settings.mb_image != blank %}
            <img class="lazyload js pad-up--hide"
                 src="{{ block.settings.mb_image | img_url: '1x' }}"
                 srcset="{{ block.settings.mb_image | img_url: '1500x' }}, {{ block.settings.mb_image | img_url: '960x' }}"
                 sizes="(max-width: 960px) 960px, 1500px" 
                 alt=""
                 width="{{ block.settings.mb_image.width }}" 
                 height="{{ block.settings.mb_image.height }}"/>
            {% else %}
            <img class="lazyload js pad-up--hide"
                 src="{{ block.settings.pc_image | img_url: '1x' }}"
                 srcset="{{ block.settings.pc_image | img_url: '1500x' }}, {{ block.settings.pc_image | img_url: '960x' }}"
                 sizes="(max-width: 960px) 960px, 1500px" 
                 alt=""
                 width="{{ block.settings.pc_image.width }}" 
                 height="{{ block.settings.pc_image.height }}"/>
            {% endif %}
          </div>
          {% endif %}
          {% if block.settings.title != blank %}
          <div class="content-container">
            <h2 class="title-box">{{ block.settings.title }}</h2>
            {% if block.settings.show_separator %}
            <div class="separator-box"></div>
            {% endif %}
            {% if block.settings.desc != blank %}
            <div class="desc-box">{{ block.settings.desc }}</div>
            {% endif %}
          </div>
          {% endif %}

          {% if block.settings.block_link != blank %}
          </a>
        {% else %}
        </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}

