<div class="feature-service-container">
<style>
  @media screen and (max-width: 589px) {
    .feature-service-container{
      background-color:{{section.settings.mb_bg_color}};
    }
  }
  </style>
  <div class=" page-width">
    <div class="fsc-inner">
      {%for block in section.blocks%}
     
        <div class="cell">
          <div class="small--hide">
           {%if block.settings.link%}
      <a href="{{block.settings.link}}">
      {%endif%}
          <div class="fsc-icon">
            <span class="normal transition">  {{block.settings.icon}}</span>
              <span class="active transition">  {{block.settings.active_icon}}</span>
          </div>
            <h2 class="fsc-title">
              {{block.settings.title}}
          </h2>
           <div class="fsc-content">
                {{block.settings.content}}
          </div>
      
         {%if block.settings.link%}
      </a>
      {%endif%}  
       </div>
             <div class="medium-up--hide">
         
          <div class="fsc-icon">
            <span class="">  {{block.settings.icon}}</span>
           
          </div>
            <h2 class="fsc-title">
              {{block.settings.title}}
          </h2>
<!--            <div class="fsc-content">
                {{block.settings.content}}
          </div> -->
      
       </div>
      </div>
      {%endfor%}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Feature service",
"class":"index-section",
    "settings": [
  {
    "type": "color",
    "id": "mb_bg_color",
    "label": "background color for mobile"
  }
],
"blocks": [
{
  "type": "image",
  "name":"Image",
  "settings": [
  {
    "type": "html",
    "id": "icon",
    "label": "Icon"
  },
 {
    "type": "html",
    "id": "active_icon",
    "label": "Active icon"
  },
  {
    "type": "text",
    "id": "title",
    "label": "Title"
  }, {
    "type": "text",
    "id": "content",
    "label": "Content"
  },
 {
    "type": "url",
    "id": "link",
    "label": "Link"
  }
  ]
}
],
"presets": [{
		"name": "Feature service",
		"category": "Image"
	}]
  }
{% endschema %}

