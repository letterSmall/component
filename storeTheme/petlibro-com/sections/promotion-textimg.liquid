<div class="promotiontextimg-container">
  <div class="page-width">
    {% for block in section.blocks %}
    <div class="promotiontextimg-wrapper {% if block.settings.position == 'right' %} promotiontextimg-right {% endif %}">
      <div class="promotiontextimg-box-img">
        {% if block.settings.btn_url %}
        <a href="{{ block.settings.btn_url }}">
          {% endif %}
          {% if block.settings.image %}
          <img class="spsmall-hide" src="{{ block.settings.image | img_url:'master' }}"/>
          {% endif %}
          {% if block.settings.image_mb != blank %}
          <img class="ipadup-hide" src="{{ block.settings.image_mb | img_url:'master' }}"/>
          {% else %}
          <img class="ipadup-hide" src="{{ block.settings.image | img_url:'master' }}"/>
          {% endif %}
          {% if block.settings.btn_url %}
        </a>
        {% endif %}
      </div>

      <div class="promotiontextimg-box-text">
        {% if block.settings.title != blank %}
        <div class="title">{{ block.settings.title }}</div>
        {% endif %}

        {% if block.settings.content != blank %}
        <div class="text">{{ block.settings.content }}</div>
        {% endif %}
        {% if block.settings.btn_text != blank %}
        <a class="btn promotion-btn" href="{{ block.settings.btn_url }}">{{ block.settings.btn_text }}</a>
        {% endif %}
      </div>

    </div>
    {% endfor %}
  </div>
</div>



{% schema %}

  {
    "name": "Promotion Text and Img",
    "settings": [],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
        "type": "select",
        "id": "position",
        "label": "Image Position",
        "default": "left",
          "options": [
              {
                "value": "left",
                "label": "left"
              },
              {
                "value": "right",
                "label": "right"
              }
            ]
          },{
            "type": "image_picker",
            "id": "image",
            "label": "Image(Recommended sizeï¼š795x517px)"
          },{
            "type": "image_picker",
            "id": "image_mb",
            "label": "Image Mobole"
          },{
            "type": "text",
            "id": "title",
            "label": "title"
          },{
            "type": "richtext",
            "id": "content",
            "label": "content"
          },{
            "type": "text",
            "id": "btn_text",
            "label": "btn_text"
          },{
            "type": "url",
            "id": "btn_url",
            "label": "btn_url"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Promotion Text and Img",
        "category": "image"
 
      }
    ]
  }
{% endschema %}

         