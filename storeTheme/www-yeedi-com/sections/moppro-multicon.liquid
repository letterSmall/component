 <div class="moppromulticon-container">
   {% if section.settings.title != blank %}
  <div class="moppromulticon-title">{{ section.settings.title }}</div>
   {% endif %}
  <div class="moppromulticon-box">
   {% for block in section.blocks %}
  <div class="moppromulticon-item">
    {% if block.settings.title != blank %}
  <div class="moppromulticon-item-title">{{ block.settings.title }}</div>
  {% endif %}
    {% if block.settings.image %}
    <div class="mbmopiconimgbox"><img class="lazyload" alt src="{{ block.settings.image | img_url:'10x' }}" data-src="{{ block.settings.image | img_url:'master' }}" /> </div>
   {% endif %}
   
   </div>
   {% endfor %}
  </div>
</div>
<style>
  #shopify-section-{{ section.id }}{
   background-color: {{section.settings.bg_color}};
  }
</style>



{% schema %}
  {
    "name": "Product Buzz",
    "settings": [
       {
            "type": "text",
            "id": "title",
            "label": "title"
          },{
            "type": "color",
            "id": "bg_color",
            "label": "BackgroundColor"
          }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "block",
        "settings": [
          {
            "type": "html",
            "id": "title",
            "label": "content"
          },{
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Product Buzz",
        "category": "Ho-Advance"
 
      }
    ]
  }
{% endschema %}


