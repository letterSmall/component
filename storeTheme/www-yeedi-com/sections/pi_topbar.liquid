<div id="pi_topbar">
  <div class="pi_topbar-wrapper">
    {% if section.settings.title != blank %}
    <h3 class="pi_topbar-title">{{ section.settings.title }}</h3>
    {% endif %}
    {%- if section.settings.button_label != blank -%}
    <a href="{{ section.settings.button_link }}" class="btn">
      {{ section.settings.button_label }}
    </a>
    {%- endif -%}
  </div>
</div> 

{% schema %}
  {
    "name": "PI Topbar",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "PI Topbar",
        "category": "text"
      }
    ]
  }
{% endschema %}

