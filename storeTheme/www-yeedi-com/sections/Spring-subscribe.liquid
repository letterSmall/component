            "type": "checkbox",
            "id": "show_block",
            "label": "show this block?",
            "default": true
          },{
            "type": "color",
            "id": "bgcolor",
            "label": "backgroundcolor"
          },{
            "type": "text",
            "id": "title",
            "label": "title"
          },{
            "type": "image_picker",
            "id": "image01",
            "label": "image01"
          },{
            "type": "image_picker",
            "id": "image02",
            "label": "image02"
          },{
            "type": "image_picker",
            "id": "image03",
            "label": "image03"
          },{
            "type": "image_picker",
            "id": "image04",
            "label": "image04"
          }
      
    ],
    "presets": [
      {
        "name": "SpringSale Form",
        "category": "Ho-Advance"
 
      }
    ]
  }
