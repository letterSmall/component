    "blocks": [
      {
        "type": "block",
        "name": "block",
        "settings": [
          {
        "type": "image_picker",
        "id": "banner",
        "label": "banner"
      },{
        "type": "image_picker",
        "id": "banner_mobile",
        "label": "banner(mobile)"
      },{
        "type": "url",
        "id": "img_url",
        "label": "img_url"
      },{
        "type": "image_picker",
        "id": "amz_buy_img",
        "label": "amz_buy_img"
      },{
        "type": "text",
        "id": "btn_text",
        "label": "btn_text"
      },{
        "type": "html",
        "id": "code",
        "label": "code"
      }
        ]
      }
    ],
    "presets": [
      {
        "name": "Landingpage_image",
