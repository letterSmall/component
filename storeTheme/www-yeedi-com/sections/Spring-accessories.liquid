  {
    "name": "SpringSale Accessories",
    "settings": [
           {
            "type": "text",
            "id": "title",
            "label": "title"
          },{
            "type": "text",
            "id": "button",
            "label": "button"
          },{
            "type": "url",
            "id": "button_url",
            "label": "button_url"
          }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "text",
            "id": "toplable",
            "label": "Pecent"
          },{
            "type": "product",
            "id": "product",
            "label": "product"
          },{
            "type": "image_picker",
            "id": "image",
            "label": "Image(Recommended sizeï¼š390*390px)"
          },{
