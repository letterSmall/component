
<div class="vactxtoverimg-container">
  {% if section.settings.image %}
  <div>
  <img class="small-hide" src="{{ section.settings.image | img_url:'master' }}"/>
  <img class="medium--up-hide" src="{{ section.settings.image_mb | img_url:'master' }}"/>
  </div>
{% endif %}
    <div class="vactxtoverimg-text">
  {% if section.settings.title != blank %}
  <div class="vactxtoverimg-title">{{ section.settings.title }}</div>
  {% endif %}
  {% if section.settings.content != blank %}
  <div class="vactxtoverimg-content small-hide">{{ section.settings.content }}</div>
    <div class="vactxtoverimg-content medium--up-hide">{{ section.settings.content_mobile }}</div>
  {% endif %}
      
  </div>

  
</div>
{% schema %}
  {
    "name": "Vac2pro Textoverimage",
    "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image(Recommended size：1920*px)"
          },{
            "type": "image_picker",
            "id": "image_mb",
            "label": "Image Mobile(Recommended size：750*px)"
          },{
            "type": "html",
            "id": "title",
            "label": "title"
          },{
            "type": "richtext",
            "id": "content",
            "label": "content"
          },{
            "type": "richtext",
            "id": "content_mobile",
            "label": "content mobile"
          }
    ],

    "presets": [
      {
        "name": "Vac2pro Textoverimage",
        "category": "Ho-Advance"
      }
    ]
  }
{% endschema %}
